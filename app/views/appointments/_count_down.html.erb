<div id="count-down" class="d-flex pb-5">
  <div>
    <div class="d-flex">
      <span><%= (end_time.day / 10).to_s %></span>
      <span><%= (end_time.day % 10).to_s %></span>
    </div>
    <small>Days</small>
  </div>
  <strong>:</strong>
  <div>
    <div class="d-flex">
      <span>0</span>
      <span>0</span>
    </div>
    <small>Hours</small>
  </div>
  <strong>:</strong>
  <div>
    <div class="d-flex">
      <span>0</span>
      <span>0</span>
    </div>
    <small>Mins</small>
  </div>
  <strong>:</strong>
  <div>
    <div class="d-flex">
      <span>0</span>
      <span>0</span>
    </div>
    <small>Secs</small>
  </div>
</div>