<% require 'csv' %>
<%= CSV.generate do |csv|
      # header row
      csv << %w(id patient_name doctor_name appointment_time currency amount)
      csv << [@appointment.id,
              @appointment.user.name,
              @appointment.doctor.name,
              @appointment.start_timestamp,
              @appointment.currency,
              @appointment.amount]
    end
%>